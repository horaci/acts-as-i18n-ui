<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
<title>I18n Translation UI</title>
<%=javascript_include_tag :defaults %>
<%=stylesheet_link_tag "i18n_ui/i18n_ui.css" %>
</head>
<body>
	<div id='container'>
		<div id='header'>
			<h1>I18n Translation UI</h1>
		</div>
		<div id='content'>
			<%= yield %>
		</div>
		<div id='rightmenu'>
			<h2>Filter:</h2>
			<div id='filter_form'>
			<%= render :partial => "i18n_ui/filter_form" %>
			</div>
			<br/>
			<h2>Actions:</h2>
			<div id='actions_form'>
			<%= render :partial => "i18n_ui/actions_form" %>
			</div>

		</div>
		<div class='clearfix'></div>
		<div id='footer'>
			this is footer
		</div>
	</div>
</body>
</html>